{
  "name": "giaolien-fullstack",
  "version": 2,
  "functions": {
    "server/server.js": {
      "memory": 1024
    }
  },
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/server.js", "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"] },
    { "src": "/socket.io/(.*)", "dest": "/server/server.js" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/client/build/index.html" }
  ]
} 