{
  "name": "giaolien-fullstack",
  "version": 2,
  "functions": {
    "server/server.js": {
      "memory": 1024
    }
  },
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/auth-login",
      "dest": "/api/auth-login.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/api/test",
      "dest": "/api/test.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/api-check",
      "dest": "/api/api-check.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/status",
      "dest": "/server/server.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "/server/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, x-auth-token, Authorization, X-Requested-With, Accept" }
      ]
    }
  ]
} 