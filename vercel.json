{
  "name": "giaolien-fullstack",
  "version": 2,
  "functions": {
    "server/server.js": {
      "memory": 1024
    }
  },
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/server.js" },
    { "source": "/socket.io/(.*)", "destination": "/server/server.js" },
    { "source": "/(.*)", "destination": "/client/build/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, x-auth-token, Authorization, X-Requested-With, Accept" }
      ]
    }
  ]
} 