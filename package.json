  "dependencies": {
    "@types/react-beautiful-dnd": "^13.1.8",
    "aos": "2.3.4",
    "bootstrap-icons": "1.11.3",
    "concurrently": "8.2.2",
    "jsqr": "1.4.0",
    "nodemailer": "6.10.1",
    "react-beautiful-dnd": "^13.1.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-qr-barcode-scanner": "2.1.0",
    "react-toastify": "11.0.5"
  },
